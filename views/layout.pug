doctype html
mixin item(title, url)
  li 
    a(href=url class=path == url ? "active" : '')=title





html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    span=path
    ul
      +item('Strona główna', '/')
      +item('Nowości', '/news')
      +item('Quiz', '/quiz')
      +item('Administrator', '/admin')



    block content
